{
  "name": "mern-boiler-plate",
  "version": "1.0.0",
  "description": "open source mern boiler plate",
  "main": "index.js",
  "scripts": {
    "setup": "npm run setup:client && npm run setup:server",
    "setup:client": "cd client && npm install",
    "setup:server": "cd server && npm install",
    "client": "cd client && npm run start",
    "server": "cd server && npm run dev",
    "app": "concurrently -n client,server \"npm run client\" \"npm run server\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WEEFAA/mern-boiler-plate.git"
  },
  "keywords": [
    "reactjs",
    "node",
    "express",
    "mongodb"
  ],
  "author": "weefa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WEEFAA/mern-boiler-plate/issues"
  },
  "homepage": "https://github.com/WEEFAA/mern-boiler-plate#readme",
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}
